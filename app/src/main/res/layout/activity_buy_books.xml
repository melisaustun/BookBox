<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blur_img"
    tools:context=".ui.cart.BuyBooks">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:drawablePadding="@dimen/_14sdp"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:text="Satın Al"
        android:textStyle="bold"
        android:textSize="@dimen/_16ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Ad Soyad:"
        android:textColor="@color/primary_text"
        android:textSize="15dp"
        android:textStyle="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="57dp" />

    <EditText
        android:id="@+id/et_name_rental2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/addcart"
        android:ems="10"
        android:inputType="text"
        android:scaleType="center"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="22dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Adres:"
        android:textColor="@color/primary_text"
        android:textSize="15dp"
        android:textStyle="normal"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_address2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_45sdp"
        android:inputType="textMultiLine"
        android:fitsSystemWindows="true"
        android:layout_gravity="center"
        android:background="@drawable/addcart"
        android:ems="10"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Telefon Numarası:"
        android:textColor="@color/primary_text"
        android:textSize="15dp"
        android:textStyle="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="57dp" />

    <EditText
        android:id="@+id/et_phone2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="center"
        android:background="@drawable/addcart"
        android:ems="10"
        android:inputType="phone"
        android:maxLength="11"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_register2"
        android:layout_width="@dimen/_190sdp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:background="@drawable/input_design"
        android:clickable="true"
        android:focusable="true"
        android:text="Kaydet ve Ödemeye Geç"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_210sdp"
        android:padding="10dp" >

        <TextView
            android:id="@+id/btn_cancel_rental2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:textColor="@color/purple_500"
            android:textSize="@dimen/_13sdp"
            android:clickable="true"
            android:layout_gravity="left"
            android:textAllCaps="false"
            android:focusable="true"
            android:text="Sepete Dön"/>

    </LinearLayout>

</LinearLayout>