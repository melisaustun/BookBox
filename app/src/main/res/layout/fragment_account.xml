<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/blur_img"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingHorizontal="31sp">

                <TextView
                    android:id="@+id/kullaniciBilgisi"
                    android:layout_width="131dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:text="Melisa Üstün"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/cardView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.42000002" />

                <TextView
                    android:id="@+id/kullaniciMail"
                    android:layout_width="172dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:text="melisaustun@gmail.com"
                    android:textColor="@color/secondary_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/cardView"
                    app:layout_constraintTop_toBottomOf="@+id/kullaniciBilgisi"
                    app:layout_constraintVertical_bias="0.0" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="68dp"
                    android:layout_height="71dp"
                    android:background="@drawable/bg_card_view"
                    app:background="@null"
                    app:cardCornerRadius="@dimen/_46sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.017"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:src="@drawable/profilephoto" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:background="@drawable/blur_img"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:gravity="center"
                        android:text="Metin okuyucu"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/gray" />
                    <ImageView
                        android:id="@+id/copytext"
                        android:layout_width="149dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:gravity="center"
                        android:src="@drawable/textcam" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:gravity="center"
                        android:text="BookBox Asistan"
                        android:textColor="@color/purple_700"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@color/gray" />

                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="119dp"
                        android:layout_height="78dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="center"
                        android:src="@drawable/chat" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/bildirimlerim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:text="Bildirimler"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14ssp"
                app:drawableEndCompat="@drawable/ic_arrow_forward"
                app:drawableStartCompat="@drawable/ic_bell" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/kuponlarim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:drawablePadding="@dimen/_14sdp"
                android:text="Kuponlarım"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14ssp"
                app:drawableEndCompat="@drawable/ic_arrow_forward"
                app:drawableStartCompat="@drawable/ic_promo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/hakkimizda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:text="Hakkımızda"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14ssp"
                app:drawableEndCompat="@drawable/ic_arrow_forward"
                app:drawableStartCompat="@drawable/ic_help" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/gray" />


            <TextView
                android:id="@+id/cikis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:drawablePadding="@dimen/_16sdp"
                android:text="Çıkış Yap"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/_14ssp"
                app:drawableStartCompat="@drawable/ic_logout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@color/gray" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>